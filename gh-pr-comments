#!/usr/bin/env bash
set -euo pipefail

if ! command -v go >/dev/null 2>&1; then
  echo "error: Go is required to run this extension from source." >&2
  echo "Install Go from https://go.dev/dl/ and try again." >&2
  exit 1
fi

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$script_dir"
exec go run . "$@"
